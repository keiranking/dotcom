<% url = "https://www.youtube.com/embed/#{video_id}" + "?start=#{start_at}" if locals.key?(:start_at) %>

<div class="aspect-ratio aspect-ratio--widescreen">
  <iframe
    class="aspect-ratio__content"
    width="640"
    height="360"
    src="<%= url %>"
    frameborder="0"
    allow="accelerometer; encrypted-media; gyroscope"
    allowfullscreen
  >
  </iframe>
</div>

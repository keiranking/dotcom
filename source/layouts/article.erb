<% wrap_layout :layout do %>
  <section class="section section--padded">
    <article
      class="
        section__content
        section__content--slim
        <%= "article article--#{current_article.data.category}" if current_article %>
        "
    >
      <header>
        <% if current_article.data.dept %>
          <p class="flytitle">
            <span class="flytitle__item flytitle__dept">
              <%= current_article.data.dept %>
            </span>
          </p>
        <% end %>

        <h1>
          <%= current_article.data.title %>
        </h1>
      </header>

      <%= yield %>
    </article>
  </section>
<% end %>
